{
    "name": "jswhitten/hygmap",
    "description": "Interactive 3D star mapping application",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5"
    },
    "autoload-dev": {
        "psr-4": {
            "HYGMap\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:coverage": "phpunit --coverage-text --coverage-clover coverage.xml",
        "test:coverage-html": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "ci": ["@test", "@analyse"]
    },
    "config": {
        "sort-packages": true
    }
}
