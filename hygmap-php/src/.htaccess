# Disable automatic directory indexes
Options -Indexes

# Block direct access to sensitive files
<FilesMatch "^(\.env|composer\.(json|lock)|.*\.(sql|sh|bak|gz))$">
    Require all denied
</FilesMatch>

# Force UTF-8 for text files
AddDefaultCharset UTF-8

# Block aggressive bots and AI crawlers
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_USER_AGENT} (ClaudeBot|Amazonbot|GPTBot|CCBot|ChatGPT|anthropic|Google-Extended|FacebookBot|Bytespider|PetalBot|SemrushBot|AhrefsBot|DotBot|MJ12bot) [NC]
    RewriteRule .* - [F,L]
</IfModule>